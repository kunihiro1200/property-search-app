{
  "version": 2,
  "env": {
    "TS_NODE_TRANSPILE_ONLY": "true"
  },
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "typescript": {
    "ignoreBuildErrors": true
  }
}
