{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "google-service-account.json"],
        "typescript": {
          "noEmitOnError": false,
          "transpileOnly": true
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "TS_NODE_TRANSPILE_ONLY": "true"
  }
}
