{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/routes/publicProperties.ts", "src/routes/publicInquiries.ts", "src/services/**", "src/config/**", "src/middleware/**", "src/types/**", "src/utils/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
