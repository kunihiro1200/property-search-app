{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "*.ts",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
}
